<Window
    x:Class="CoinsOrganizerDesktop.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:CoinsOrganizerDesktop.Views"
    Title="Coins Organizer"
    Width="1500"
    Height="850"
    mc:Ignorable="d">
    <Grid>
        <TabControl>
            <TabItem Header="Coins">
                <views:CoinsView />
            </TabItem>
            <TabItem Header="Orders">
                <views:OrdersView />
            </TabItem>
            <TabItem Header="Details">
                <Image Source="https://s3.eu-central-1.amazonaws.com/coinsorganizer/1000.JPG" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
